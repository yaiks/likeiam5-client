{
	"private": true,
	"name": "likeiam5-client",
	"version": "0.0.0",
	"license": "MIT",
	"author": "Ricardo Han",
	"description": "beautiful frontend for likeiam5 application",
	"keywords": [
		"likeiam5",
		"frontend",
		"client"
	],
	"scripts": {
		"build": "scripts/create-env.js && preact build --prerenderUrls ./prerender-urls.js",
		"serve": "sirv build --cors --single",
		"dev": "preact watch --prerenderUrls ./prerender-urls.js",
		"lint": "eslint src",
		"test": "jest"
	},
	"eslintConfig": {
		"extends": "preact",
		"ignorePatterns": [
			"build/"
		]
	},
	"devDependencies": {
		"@preact/prerender-data-provider": "0.0.1",
		"enzyme": "^3.10.0",
		"enzyme-adapter-preact-pure": "^2.0.0",
		"eslint": "^6.0.1",
		"eslint-config-preact": "^1.1.0",
		"identity-obj-proxy": "^3.0.0",
		"jest": "^24.9.0",
		"jest-preset-preact": "^1.0.0",
		"preact-cli": "^3.0.0-rc.6",
		"preact-render-spy": "^1.2.1",
		"sirv-cli": "^0.4.5"
	},
	"dependencies": {
		"axios": "^0.19.2",
		"dotenv-safe": "^8.2.0",
		"preact": "^10.3.2",
		"preact-render-to-string": "^5.1.4",
		"preact-router": "^3.2.1",
		"quill": "^1.3.7",
		"typeface-nunito": "^1.1.3"
	},
	"jest": {
		"preset": "jest-preset-preact",
		"setupFiles": [
			"<rootDir>/tests/__mocks__/browserMocks.js",
			"<rootDir>/tests/__mocks__/setupTests.js"
		]
	}
}
